<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:paddingBottom="17dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E82F00FF"
        android:paddingVertical="20dp"
        android:text="IMMER UND SCHNELL"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/everyDayRadoiButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jeden Tag" />

        <RadioButton
            android:id="@+id/everyWeekRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jeden Woche" />

        <RadioButton
            android:id="@+id/everyMounthRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jeden Monat" />


        <RadioButton
            android:id="@+id/everyYearRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jeden Jahr" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textSize="20sp"
            android:text="None"/>

    </RadioGroup>

</LinearLayout>